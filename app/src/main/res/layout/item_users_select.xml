<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardCornerRadius="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="1.5"
            android:layout_margin="@dimen/dp_4"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_item_image_select"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_person_black"
            app:civ_border_width="1dp"
            app:civ_border_color="#b3b7b1"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="7.5"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_item_displayName_select"
                android:textStyle="bold"
                android:text="@string/display_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/dp_4"
                android:id="@+id/text_item_status_select"
                android:text="@string/default_status"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <CheckBox
            android:id="@+id/checkbox_item_users_select"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>