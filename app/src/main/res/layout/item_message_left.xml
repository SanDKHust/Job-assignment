<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">
    <TextView
        android:text="Time"
        android:id="@+id/tm_message_left"
        android:textSize="10sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="SmallSp" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_message_left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:src="@drawable/default_avata"/>

    <TextView
        android:id="@+id/text_message_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_corner2"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/image_message_left"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:text="Message"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000" />
    <TextView
        android:id="@+id/name_message_user"
        android:layout_toEndOf="@id/image_message_left"
        android:layout_marginStart="5dp"
        android:layout_alignParentTop="true"
        android:text="name"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>

